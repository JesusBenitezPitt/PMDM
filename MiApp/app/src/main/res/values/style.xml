<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="empresa">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tipo">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="fondo">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="estrellas">
        <item name="android:color">#FF0000FF</item>
    </style>

    <style name="MiMaterialButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/main</item>

        <item name="android:textColor">@android:color/white</item>

        <item name="cornerRadius">6dp</item>

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MiEstiloDialogo" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/custom_dialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MiDialogoTitulo</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MiDialogoMensaje</item>

        <!-- ESTILOS DE BOTONES CORRECTOS EN MATERIAL3 -->
        <item name="buttonBarPositiveButtonStyle">@style/MiDialogoBotonPositivo</item>
        <item name="buttonBarNegativeButtonStyle">@style/MiDialogoBotonNegativo</item>
    </style>

    <style name="MiDialogoTitulo" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="MiDialogoMensaje" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">#333333</item>
    </style>

    <style name="MiDialogoBotonPositivo" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="MiDialogoBotonNegativo" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/main</item>
    </style>

</resources>